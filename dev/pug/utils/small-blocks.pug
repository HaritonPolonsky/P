mixin listLinkSpan(classNav, link, linkText, text)
    - var cN = classNav+"-nav"
    li(class=cN+"__item")
        a(href=link)(class=cN+"__link")=linkText
        if(text)
            span(class=cN+"__text")=text
  
mixin liImgSpanSpan(className, img, alt, label, value)
    li(class=className)
        img(src="static/images/content/"+img+".jpg" alt=alt)(class=className+"__img")
        span(class=className+"-label")=label
        span(class=className+"-value")=value

mixin details(value,className, valueClass)
    div(class=className+"__line details__line")
        div(class=className+"__label details__label")
            span(class=className+"__label-text details__label-text")=value[0]
        div(class=className+"__value details__value")
            span(class=className+"__value-text.details__value-text "+valueClass)=value[1]
        if(value[2] !=="")
            div(class=className+"__link details__link")
               a(href=value[3]).link.link-green.link-underline=value[2]

mixin navHeader(className)
    ul(class=className+"-nav__list")
        +listLinkSpan(className, "", "Payment and delivery", "")
        +listLinkSpan(className, "", "Warranty", "")
        +listLinkSpan(className, "", "Services", "")
        +listLinkSpan(className, "", "Company", "")
        +listLinkSpan(className, "contacts.html", "Contacts", "")
        if(block)
            block
            
