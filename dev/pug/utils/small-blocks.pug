mixin contacts(className, close, title, text, label, ...value)
    div(class=className+"__info")
        if(close !== "")
            .contacts-popup__close
                +icon('close', 'contacts-popup__close-icon')
        span(class=className+"__title")= title
        span(class=className+"__text")= text
        div(class=className+"__block")
            span(class=className+"__label")= label 
            each v in value
                span(class=className+"__text")=v



mixin sliderNavNavigation(className, iconClass)
    div(class="slider__nav slider__nav--next "+className+"--next")
        +icon('left', 'slider__nav__icon '+iconClass+"icon--left")
    div(class="slider__nav slider__nav--prev "+className+"--prev")
        +icon('right', 'slider__nav__icon '+iconClass+"icon--prev")         

mixin video(title, link, linkImg, linkClass, iconName)
    .video-item
        h3.title--small=title
        a(href=link style="background-image:url('static/images/content/video/"+linkImg+".jpg')")(class="popup-link video__content " + linkClass)
            +icon(iconName, 'video__icon')




mixin divIconSpan(className, iconName, iconClass, text)
    div(class=className+"-block")
        +icon(iconName, iconClass)
        span(class=className+"-text")=text
    if(block)
        block

mixin sectionRight(text, c, link)
    div(class="section-header__right")
        +linkText("link-green link-underline", link, text)
        +countText(c, "")