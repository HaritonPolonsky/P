mixin priceSale(className,oldPrice, currentPrice)
    - var priceOld = "cross price__old"+className
    - var priceCurrent = "price__current"+className
    if(oldPrice !=="")
        span(class=priceOld)=oldPrice+ currency  
    span(class=priceCurrent)=currentPrice+ currency
    



