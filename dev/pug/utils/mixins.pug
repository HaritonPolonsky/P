mixin tableRowColumn(className, modifier, ...items)
    if(modifier!=="")
        - var modifier="table__row--"+modifier
    div(class=className+"-table__row table__row "+modifier)
        each text in items
            div(class=className+"-table__column table__column")
                span.table__cell--label.label=text
                

mixin tabletTableRowColumn(className, modifier, ...items)
    if(modifier!=="")
        - var modifier="table__row--"+modifier
    div(class=className+"-table__row table__row "+modifier)
        each v, index in items
            div(class=className+"-table__column table__column")
                if(index===1)
                    span.table__cell--title="Ingredient"
                if(index===2)
                    span.table__cell--title="Count"
                span.table__cell--label.label=v

mixin countText(count, className)
    - var cN="count-text"+className
    if(count!=="")
        span(class=cN)=count 
