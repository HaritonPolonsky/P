mixin linkContentTitle(className, title, text, iconText, link)
    a(href=link)(class=className+"__body")
        div(class=className+"__content")
           div(class=className+"__title")=title 
           p(class=className+"__text")=text
           +divIconSpan(className+"__icon", "hourglass", "actions-item__icon", iconText)
        if(block)
            block
            

mixin divMarkIcon(className, markClass, iconName, iconClass)
    div(class=className+"__mark "+markClass)
        +icon(iconName, iconClass)
        
mixin selectWrap(className, close)
    div(class=className+"-selected select-wrap")
        if(close !== "")
            div(class=className+"-selected select-close")
                +icon('close', className+'-selected__close-icon select__close-icon')
        if(block)
            block
            
