mixin toggle(className, title, current, items)
    div(class=className +"__toggle toggle")
        span(class=className +"__toggle-title toggle-title")=title
        div(class=className+"__toggle-wrap toggle-wrap")
            div(class=className+"__toggle-click "+"toggle-click")
                span(class=className+"__toggle-current toggle-current show")=current
            ul(class=className+"__toggle-list toggle-list")
                each za in items
                    if za!==current
                        +listLinkSpanCount(className+"-toggle "+" toggle", za[1], za[0], "")
                        

mixin blockHeaderSmall(className, titleClass, title, count, toggleTitle,   ...items )
    div(class=className)
        +sectionHeaderSmall(title, count, titleClass, "")
            if(toggleTitle !== "")
                +toggle(className, toggleTitle,  items[0], items)
                
        if(block)
            block




mixin blockTitleContentPlist(title, ...text)
    .static-block
        if(title !== "")
            .static-block--title=title
        .static-block--content
            each t in text
                p.static-block--text=t
                