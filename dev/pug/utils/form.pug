mixin formError(text, textClass, errorList)
    .form-error
        span(class="form-error__text "+textClass)=text
        if(errorList !== "")
            ul.form-error__list
                block

mixin liError(className, text)
    li(class="form-error__item "+className)=text
    if(block)
        block
            
mixin textArea(placeholderText, type, placeholderName, className)
    textarea(placeholder=placeholderText type=type name=placeholderName)(class="textarea-field input-text "+className)
        
    
mixin inputF(placeholderText, type, placeholderName, className, valueInput)
    input(placeholder=placeholderText type=type name=placeholderName value=valueInput)(class="input-field input-text "+className)
    //input(placeholder=placeholderText type=placeholderType name=placeholderName)(class="input-field input-text"+className)



mixin checkboxP(text, className, colorClass, color)
    label.checkbox
        input(type="checkbox")
        span.checkbox__custom
        .checkbox__body
            span.checkbox__text=text
            if(color!=="")
                div(class="checkbox__descr--color " + colorClass)(style='background-color: '+color)
                    if(block)
                        block

mixin checkbox(text, count, colorClass, color)
    label.checkbox
        input(type="checkbox")
        span.checkbox__custom
        .checkbox__body
            span.checkbox__text=text
            if(color!=="")
                +checkboxColor(color, colorClass)
                //span.checkbox__descr(style='background-color: '+color)
    if(count)
        +countText(count, "") 

mixin checkboxColor(color, className) 
    span(class="checkbox__descr--color " + className)(style='background-color: '+color)

mixin checkboxList(text, count, colorClass, color)
    li.filter-list__item
        +checkbox(text, count, colorClass, color)

mixin inputBut(formGroupClass, val, btnClass)
    div(class="form-group form-line__input--btn" + formGroupClass)
        input(type="submit" value=val)(class="btn"+btnClass)


        
mixin inputWrap(labelText, className, linkClass, link, linkText)
    div(class="form-group " +className)
        div(class="form-group__label-wrap")
            label.form-group__label.label=labelText 
            if(linkClass !== "")
                a(href=link)(class=linkClass)=linkText
        block
        
mixin inputFieldIcon(icon, iconClass)
    .input-field__wrap
        +icon(icon, iconClass)
        if(block)
            block

mixin passwords(linkClass, link, linkText, formClass)
    +inputWrap("Password", " form-group--require "+formClass, linkClass, link, linkText)
        .input-field__wrap
            +icon('eye', 'password-icon')
            +inputF("Password", "password", "password", "")

        if(block)
            block

mixin password(formText, formClass)
    +inputWrap(formText, " form-group--require "+formClass, "", "", "")
        +inputFieldIcon('eye', 'password-icon')
            +inputF("Password", "password", "password", "")
        if(block)
            block
        



mixin formLineText(className, text) 
    span(class="form-line__text"+className)=text
    

