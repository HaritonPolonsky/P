
mixin formLine(lineClass)
    if(lineClass!=="")
        -var lineClass = "--"+lineClass
    div(class="form-line form-input"+lineClass)
        block

mixin formLineInfo(formLineClass, text, link, linkClass, linkText)
    div(class="form-line__info " + formLineClass)
        span.form-line__info--title=text
        a(class="link.form-line__info--link "+linkClass)(href=link)=linkText
        if(block)
            block


