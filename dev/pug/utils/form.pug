mixin formFooter(textB, classB, spanClass, pClass, spanText)
    .form-footer
        +formLine("")
            +inputBut(classB, textB, " btn--size-l btn--fill")
            if(spanClass!=="")
               span(class = "form-line__text "+ spanClass)=spanText
        if(pClass!=="")
            .form-line
                p(class= "form-info "+pClass) Asking a question you agree to <a href="" class="form-info__link "> the privacy policy</a>

mixin uploadFile()
    .form-group
        label.file-upload
            input(type="file")
            +divIconSpan("file-upload__icon", "upload", "file-upload__icon", "Upload file")



mixin divIconSpanF(divClass, iconName, iconClass, spanClass, spanText)
    div(class=divClass)
        +icon(iconName, iconClass)
        span(class=spanClass)=spanText

